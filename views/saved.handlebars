{{> navs/saved}}
<div class="jumbotron">
    <div class="row">
        <div class="col-md-12">
            <h2>{{this.title}}</h1>
            <h3>{{this.subtitle}}</h3>
        </div>
    </div>
</div>

<div id="articles">
    {{#if articles}}
        {{#each articles}}
            <div class="well">
                <div class="row article">
                    <div class="col col-md-8">
                        <h5><a href="{{this.link}}">{{this.title}}</a></h5>
                    </div>
                    
                    <div class="col col-md-2">
                        <form class="form-inline" action="/api/articles/{{this.id}}?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger">Delete Article</button>
                        </form>
                    </div>
                </div>
                
            </div>
            
</div>

            
            
        {{/each}}
       
    {{else}}
        <div class="well">
            <h4>There are no saved articles.</h4>
        </div>
    {{/if}}
</div>